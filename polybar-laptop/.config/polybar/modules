[module/xrandrbrightness]
type = custom/script
interval = 1

label = %output%%
label-padding = 1
label-foreground = ${colors.foreground}

format = "<label>"
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
exec = $HOME/.config/polybar/scripts/get_xrandr_brightness
format-background = ${colors.background-lighten-2}
format-padding = 1

scroll-up = change-brightness-xrandr i 5
scroll-down = change-brightness-xrandr d 5

